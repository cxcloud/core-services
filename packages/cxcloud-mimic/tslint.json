{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "no-var-requires": false,
        "interface-name": [
            true,
            "never-prefix"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "never",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "esSpecCompliant": true
            }
        ],
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template"
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore"
        ],
        "interface-over-type-literal": false,
        "object-literal-sort-keys": false,
        "max-line-length": [
            true,
            {
                "limit": 140,
                "ignore-pattern": "^import |^export {(.*?)}"
            }
        ],
        "no-namespace": false
    },
    "exclude:": [
        "**/node_modules"
    ],
    "rulesDirectory": []
}